<?xml version="1.0" encoding="ISO-8859-1"?>

<project xmlns="http://maven.apache.org/DECORATION/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

    <bannerLeft>
        <name>${project.name}</name>
<!--        <src>http://tidalwave.it/media/Tidalwave%20Logo.png</src>-->
        <href>https://tidalwave.it/projects/thesefoolishthings</href>
    </bannerLeft>
    <bannerRight>
        <src>http://tidalwave.it/media/Tidalwave%20Logo.png</src>
    </bannerRight>

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>1.7</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>false</sideBarEnabled>
            <topBarContainerStyle>width: 90%;</topBarContainerStyle>
            <googleSearch>
                <sitesearch>${project.url}</sitesearch>
            </googleSearch>
            <gitHub>
                <projectId>tidalwave-it/thesefoolishthings-src</projectId>
                <ribbonOrientation>right</ribbonOrientation>
                <ribbonColor>gray</ribbonColor>
            </gitHub>
            <ohloh>
                <projectId>TheseFoolishThings</projectId>
                <widget>factoids</widget>
            </ohloh>
        </fluidoSkin>
    </custom>

    <body>
        <menu name="Overview">
            <item name="Introduction" href="index.html"/>
        </menu>
        <menu ref="reports" inherit="bottom"/>
    </body>
</project>
