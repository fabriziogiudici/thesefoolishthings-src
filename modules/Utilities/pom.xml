
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>it.tidalwave.thesefoolishthings</groupId>
        <artifactId>modules</artifactId>
        <version>1.11.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <groupId>it.tidalwave.thesefoolishthings</groupId>
    <artifactId>it-tidalwave-util</artifactId>
    <packaging>nbm</packaging>
    <version>1.12.2-SNAPSHOT</version>
    <name>TheseFoolishThings - Utilities</name>

    <properties>
        <stableAPI>true</stableAPI>
    </properties>

    <dependencies>
        <!-- These dependencies with 'provided' scope won't be embedded in the .nbm -->
        <dependency>
            <groupId>com.google.code.findbugs</groupId>
            <artifactId>jsr305</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>clirr-maven-plugin</artifactId>
                <configuration>
                <!-- workaround, as enum signature is slightly different in Java 5 and 6, so 
                     it fails the check when compiling with Java 5. -->
                    <excludes>
                        <exclude>it/tidalwave/util/Finder$SortDirection</exclude>
                    </excludes>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <configuration>
                    <publicPackages>
                        <publicPackage>it.tidalwave.util</publicPackage>
                        <publicPackage>it.tidalwave.util.spi</publicPackage>
                        <publicPackage>it.tidalwave.role</publicPackage>
                        <publicPackage>it.tidalwave.role.spi</publicPackage>
                        <publicPackage>it.tidalwave.role.annotation</publicPackage>
                        <publicPackage>it.tidalwave.text</publicPackage>
                    </publicPackages>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
